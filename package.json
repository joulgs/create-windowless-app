{
    "name": "create-windowless-app",
    "version": "2.3.8",
    "description": "Create a windowless NodeJS app",
    "main": "dist/index.js",
    "bin": {
        "create-windowless-app": "./dist/index.js"
    },
    "scripts": {
        "prettier-eslint": "prettier-eslint --write *.json *.js src/**/*.ts test/**/*.ts templates/**/*.ts templates/**/*.js templates/**/*.json",
        "test": "jest",
        "compile": "rimraf dist && tsc",
        "start": "ts-node src/index.ts",
        "start:help": "npm run start -- --help",
        "start:info": "npm run start -- --info",
        "package": "npm pack",
        "build": "npm run prettier-eslint && npm run test && npm run compile && npm run package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yoavain/create-windowless-app.git"
    },
    "keywords": [
        "windowless",
        "no console",
        "nodew",
        "template",
        "typescript"
    ],
    "author": "yoavain",
    "license": "MIT",
    "engines": {
        "node": ">=8"
    },
    "files": [
        "dist/**",
        "resources/**",
        "templates/**"
    ],
    "bugs": {
        "url": "https://github.com/yoavain/create-windowless-app/issues"
    },
    "homepage": "https://github.com/yoavain/create-windowless-app#readme",
    "devDependencies": {
        "@types/cross-spawn": "6.0.1",
        "@types/fs-extra": "8.0.1",
        "@types/inquirer": "6.5.0",
        "@types/jest": "24.0.23",
        "@types/mock-fs": "4.10.0",
        "@types/node": "12.12.17",
        "@types/request": "2.48.3",
        "@types/semver": "6.2.0",
        "@types/semver-compare": "1.0.1",
        "@types/uuid": "3.4.6",
        "@types/validate-npm-package-name": "3.0.0",
        "@typescript-eslint/eslint-plugin": "2.11.0",
        "@typescript-eslint/parser": "2.11.0",
        "del": "5.1.0",
        "global-npm": "0.4.0",
        "husky": "3.1.0",
        "jest": "24.9.0",
        "lint-staged": "9.5.0",
        "mock-fs": "4.10.4",
        "mock-spawn": "0.2.6",
        "mocked-env": "1.3.2",
        "prettier": "1.19.1",
        "prettier-eslint": "9.0.1",
        "prettier-eslint-cli": "5.0.0",
        "rimraf": "3.0.0",
        "ts-jest": "24.2.0",
        "ts-node": "8.5.4",
        "typescript": "3.7.3",
        "uuid": "3.3.3"
    },
    "dependencies": {
        "chalk": "3.0.0",
        "commander": "4.0.1",
        "cross-spawn": "7.0.1",
        "envinfo": "7.5.0",
        "fs-extra": "8.1.0",
        "inquirer": "7.0.0",
        "request": "2.88.0",
        "semver": "6.3.0",
        "semver-compare": "1.0.0",
        "validate-npm-package-name": "3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "prettier-eslint --write",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    }
}
